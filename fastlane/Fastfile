# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

setup_travis
default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :matchappstore do
    match(
      app_identifier: "com.nataliabraz.OutToday.OutTodayWidget",
      type: "appstore",
    )
  end
  lane :beta do
    match(type: "appstore")
    increment_build_number(xcodeproj: "OutToday.xcodeproj")
    build_app(scheme: "OutToday")
    api_key = app_store_connect_api_key(
      key_id: "L6P5RRP72W",
      issuer_id: "d0c341fa-80e9-41d3-a453-385f7a4842a3",
      key_filepath: "./AuthKey_L6P5RRP72W.p8",
      duration: 1200,
      in_house: false,
    )
    pilot(api_key: api_key)
  end
end
